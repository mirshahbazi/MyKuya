<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar"> <!--  .Light.DarkActionBar"> -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#17161B</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">5dp</item>
    </style>
    <style name="AppTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabStyle.A</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
        <item name="android:actionBarStyle">@style/ActionBarTabViewStyle</item>
        <item name="actionBarStyle">@style/ActionBarTabViewStyle</item>
    </style>

    <style name="ActionBarTabViewStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:showDividers">middle</item>

    </style>

    <style name="ActionBarTabStyle.A" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:tabStripEnabled">true</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:actionBarDivider">@drawable/tab_divider</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

</resources>